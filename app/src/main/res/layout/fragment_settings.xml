<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".ui.settings"
    android:orientation="vertical">

    <androidx.appcompat.widget.AppCompatButton
        android:layout_width="match_parent"
        android:layout_height="69dp"
        android:text="Select a Silent mode for Profile"
        android:textSize="16dp"
        android:gravity="left|center_vertical"
        android:background="#00000000"
        android:paddingLeft="8dp">
    </androidx.appcompat.widget.AppCompatButton>

    <androidx.appcompat.widget.AppCompatButton
        android:layout_width="match_parent"
        android:layout_height="69dp"
        android:background="#00000000"
        android:gravity="left|center_vertical"
        android:paddingLeft="8dp"
        android:text="Select a Map Type"
        android:textSize="16dp"></androidx.appcompat.widget.AppCompatButton>

    <TextView
        android:layout_width="match_parent"
        android:layout_height="34dp"
        android:text="Notification Settings"
        android:paddingLeft="8dp"
        android:textColor="#C50505"></TextView>

    <CheckBox
        android:id="@+id/checkBox2"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Allow Notifications"
        android:textSize="16dp"
        android:paddingLeft="8dp"/>

    <Switch
        android:id="@+id/switch1"
        android:layout_width="match_parent"
        android:layout_height="56dp"
        android:text="Vibrate"
        android:textSize="16dp"
        android:paddingLeft="8dp"/>

    <androidx.appcompat.widget.AppCompatButton
        android:layout_width="match_parent"
        android:layout_height="69dp"
        android:text="Notification Tone"
        android:textSize="16dp"
        android:gravity="left|center_vertical"
        android:background="#00000000"
        android:paddingLeft="8dp">
    </androidx.appcompat.widget.AppCompatButton>




</LinearLayout>


